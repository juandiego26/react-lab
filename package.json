{
  "name": "react-lab",
  "version": "1.0.0",
  "description": "React + Redux Platzi course",
  "main": "./built/server/index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack -p",
    "build:windows": "set NODE_ENV=production && webpack -p",
    "bff": "node ./built/server/index.js",
    "sfs": "serve ./built/statics --port 3001 --cache 0",
    "watch": "webpack -w",
    "deploy": "now --force",
    "deploy:sfs": "now ./built/statics/",
    "start": "npm run bff",
    "test": "jest",
    "test:fix": "jest -u",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "Juan Diego Silva <silgajuandiego@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juandiego26/react-lab"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "immutable": "^3.8.2",
    "isomorphic-fetch": "^2.2.1",
    "npm": "^5.5.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-immutable": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "/__mocks__/styleMock.js"
    },
    "notify": true
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-latest-minimal": "^1.1.2",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "jest": "^21.2.1",
    "json-loader": "^0.5.7",
    "react-test-renderer": "^16.1.1",
    "redux-devtools-extension": "^2.13.2",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  }
}
